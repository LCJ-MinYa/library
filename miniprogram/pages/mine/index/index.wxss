.head-wrap {
    position: relative;
    width: 100%;
    height: 400rpx;
    background: #C7143D;
    display: flex;
    align-items: center;
    padding: 0 40rpx;
}

.login-btn {
    margin: 0;
    padding: 0;
    background: rgba(0, 0, 0, 0);
    border: 0;
    display: flex;
    align-items: center;
}

.login-btn::after {
    border: 0;
}

.header-img-box {
    position: relative;
    overflow: hidden;
    background: #fff;
    width: 150rpx;
    height: 150rpx;
    border-radius: 100rpx;
}

.header-img-box>image {
    width: 100%;
    height: 100%;
}

.header-name {
    padding-left: 30rpx;
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
}

van-cell {
    width: 100%;
}

.van-cell {
    padding-top: 30rpx !important;
    padding-bottom: 30rpx !important;
}

.van-cell__left-icon-wrap {
    margin-right: 15rpx !important;
}