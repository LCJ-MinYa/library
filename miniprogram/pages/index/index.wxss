.add-btn {
    position: fixed;
    bottom: 40rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
    background: #C7143D;
    border-radius: 100%;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.add-btn-hover {
    opacity: 0.7;
}

page {
    height: 100%;
}

.scroll-view-box {
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    height: 100%;
}

.load-more-box {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}

.load-text {
    color: #848484;
    font-size: 26rpx;
}

.load-text-padding {
    padding-left: 20rpx;
}

.book-item {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    padding: 0 20rpx;
}

.book-item-left {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #fafafa;
}

.book-item-left>.title {
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
    line-height: 1;
    padding-bottom: 20rpx;
}

.book-item-left>.content {
    font-size: 26rpx;
    color: #666;
    text-indent: 40rpx;
    line-height: 180%;
    width: 100%;
    position: relative;
    overflow: hidden;
}

.user-box {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin-top: 20rpx;
}

.user-box>image {
    width: 30rpx;
    height: 30rpx;
    display: block;
    border-radius: 30rpx;
}

.user-box>view {
    font-size: 24rpx;
    color: #999;
    padding-left: 20rpx;
}